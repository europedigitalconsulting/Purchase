<div class="card">
    <div class="card-header" id="@($"heading{Index}")">
        <h5 class="mb-0">
            <button class="btn btn-link @(Visibled ? "" :"collapsed")"
                    data-toggle="collapse" data-target="#@($"content{Index}")"
                    aria-expanded="@Visibled" aria-controls="@($"content{Index}")">
                @Title
            </button>
        </h5>
    </div>
    <div id="@($"content{Index}")" class="collapse @(Visibled ? "show" :"")"
         aria-labelledby="@($"heading{Index}")" data-parent="#accordion">
        <div class="card-body">
            @ChildContent
        </div>
    </div>
</div>